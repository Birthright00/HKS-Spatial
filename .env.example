# Unified Environment Variables for HKS-Spatial Project
# Copy this file to .env and fill in your actual API keys

# OpenAI API (used by RAG-Langchain)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (optional, for Claude models in RAG)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Nanobanana API (used by picture-generation-verbose-api-module)
NANOBANANA_API_KEY=your_nanobanana_api_key_here

# ElevenLabs API (optional, for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Service Port Configuration
RAG_SERVICE_PORT=8001
IMAGE_GEN_SERVICE_PORT=8002
COORDINATOR_PORT=8000

# Service Hosts (use 127.0.0.1 for local development)
RAG_SERVICE_HOST=127.0.0.1
IMAGE_GEN_SERVICE_HOST=127.0.0.1
COORDINATOR_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO

# Additional Configuration
# Add any other shared configuration variables here
